<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_ombre">
    <Button
        android:id="@+id/button5"
        android:layout_width="410dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#E6E6FA"
        android:text="Extra Practise Questions..."
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.617"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="368dp"
        android:layout_height="346dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerPadding="@dimen/activity_horizontal_margin"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity LifeCycle"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="124dp"
                tools:layout_editor_absoluteY="91dp" />

            <TextView
                android:id="@+id/q1"
                android:layout_width="291dp"
                android:layout_height="64dp"
                android:background="#FFFFFF"
                android:text="Ilustrate the process between the four key stages of an activity using a diagram. "
                android:textAlignment="center"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="130dp" />

            <TextView
                android:id="@+id/q4"
                android:layout_width="291dp"
                android:layout_height="56dp"
                android:background="#FFFFFF"
                android:text="Provide an example of a content providedr being used - theoretically and in @android:string/fingerprint_icon_content_description"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="366dp"
                tools:text="Provide an example of a content provider being used theoretically and in code " />

            <TextView
                android:id="@+id/q2"
                android:layout_width="291dp"
                android:layout_height="78dp"
                android:background="#FFFFFF"
                android:text="Distinguish between the 'visible lifetime', 'foreground lifetime' and 'entire lifetime' of an activity. "
                android:textAlignment="center"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="185dp" />

            <TextView
                android:id="@+id/q3"
                android:layout_width="291dp"
                android:layout_height="69dp"
                android:background="#FFFFFF"
                android:text="What happens to the activity life cycle whenever a user is browsing an application and suddenly they receive an incoming phone call?"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="253dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content Providers"
                android:textColor="#000000"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="117dp"
                tools:layout_editor_absoluteY="330dp" />

            <Button
                android:id="@+id/q5"
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/contentprovider"
                android:drawablePadding="@dimen/activity_vertical_margin"
                android:fontFamily="sans-serif"
                android:text="Explain the role of a content provider using the image above"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="143dp"
                tools:layout_editor_absoluteY="446dp" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>